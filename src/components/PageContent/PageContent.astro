---
const { content = {} } = Astro.props;
const title = content.title;
---

<main id="main-content">
  <section class="main-section">
    <h1 class="content-title" id="overview">{title}</h1>
    <slot />
  </section>
</main>

<style>
  .content {
    padding: 0;
    max-width: 75ch;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  .content > section {
    margin-bottom: 4rem;
  }
  .block {
    display: block;
  }

  @media (min-width: 50em) {
    .sm\:hidden {
      display: none;
    }
  }
</style>
